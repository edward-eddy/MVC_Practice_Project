@model UsersIndexTableDto
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Username Data</h1>

<form asp-action="Edit">

    <div class="my-3">
        <label asp-for="Username" class="col-form-label fs-5"></label>
        <input asp-for="Username" class="form-control"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="FirstName" class="col-form-label fs-5"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="LastName" class="col-form-label fs-5"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="Email" class="col-form-label fs-5"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="m-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="User" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>
@section ValidationSection {
    <partial name="_ValidationScriptsPartial" />
}