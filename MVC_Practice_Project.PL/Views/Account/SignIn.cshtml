@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div>
    <div class="text-center mb-8">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-white" xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 1024 1024">
                <path fill="currentColor" d="M858.5 763.6a374 374 0 0 0-80.6-119.5a375.63 375.63 0 0 0-119.5-80.6c-.4-.2-.8-.3-1.2-.5C719.5 518 760 444.7 760 362c0-137-111-248-248-248S264 225 264 362c0 82.7 40.5 156 102.8 201.1c-.4.2-.8.3-1.2.5c-44.8 18.9-85 46-119.5 80.6a375.63 375.63 0 0 0-80.6 119.5A371.7 371.7 0 0 0 136 901.8a8 8 0 0 0 8 8.2h60c4.4 0 7.9-3.5 8-7.8c2-77.2 33-149.5 87.8-204.3c56.7-56.7 132-87.9 212.2-87.9s155.5 31.2 212.2 87.9C779 752.7 810 825 812 902.2c.1 4.4 3.6 7.8 8 7.8h60a8 8 0 0 0 8-8.2c-1-47.8-10.9-94.3-29.5-138.2zM512 534c-45.9 0-89.1-17.9-121.6-50.4S340 407.9 340 362c0-45.9 17.9-89.1 50.4-121.6S466.1 190 512 190s89.1 17.9 121.6 50.4S684 316.1 684 362c0 45.9-17.9 89.1-50.4 121.6S557.9 534 512 534z" />
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Sign In to Your Account</h2>
        <p class="text-gray-600 text-sm">Access your account to continue</p>
    </div>

    <form asp-action="SignIn">
        <div>
            <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="your@email.com" required>
            <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block font-medium"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-1"></label>
            <input asp-for="Password" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="••••••••" minlength="6" required>
            <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block font-medium"></span>
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="flex items-center justify-between my-4">
            <label asp-for="IsRemembered" class="flex items-center">
                <input asp-for="IsRemembered" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                <span class="ml-2 text-sm text-gray-600">Remember me</span>
            </label>

            <a asp-action="ForgetPassword" data-container="forgot-password-form-container" id="forgot-password-link" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                Forgot password?
            </a>
        </div>

        <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Sign In
        </button>
    </form>

