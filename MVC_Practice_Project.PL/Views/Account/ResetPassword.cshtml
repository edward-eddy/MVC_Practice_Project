@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div>
    <div class="text-center mb-6">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-white" xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 24 24">
                <path fill="currentColor" d="M21 10.5h-1v-1a1 1 0 0 0-2 0v1h-1a1 1 0 0 0 0 2h1v1a1 1 0 0 0 2 0v-1h1a1 1 0 0 0 0-2Zm-7.7 1.72A4.92 4.92 0 0 0 15 8.5a5 5 0 0 0-10 0a4.92 4.92 0 0 0 1.7 3.72A8 8 0 0 0 2 19.5a1 1 0 0 0 2 0a6 6 0 0 1 12 0a1 1 0 0 0 2 0a8 8 0 0 0-4.7-7.28ZM10 11.5a3 3 0 1 1 3-3a3 3 0 0 1-3 3Z" />
            </svg>
        </div>
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Create Account</h2>
            <p class="text-gray-600 text-sm">Fill in your details to register</p>
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <form asp-action="ResetPassword">
            
            <div>
                <label asp-for="NewPassword" class="block text-sm font-semibold text-gray-700 mb-1 text-start"></label>
                <input asp-for="NewPassword" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="••••••••" minlength="6" required>
                <span asp-validation-for="NewPassword" class="text-sm text-red-500 mt-1 block font-medium"></span>
            </div>
            <div>
                <label asp-for="ConfirmNewPassword" class="block text-sm font-semibold text-gray-700 mb-1 text-start">Confirm Password</label>
                <input asp-for="ConfirmNewPassword" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="••••••••" required>
                <span asp-validation-for="ConfirmNewPassword" class="text-sm text-red-500 mt-1 block font-medium"></span>
            </div>
            


            <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 mt-6">
                Confirm New Password
            </button>
        </form>

       

        <p class="text-center text-gray-600 text-sm mt-6">
            Already have an account?
            <a asp-action="SignIn" data-container="signin-form-container" class="text-blue-600 hover:text-blue-800 font-semibold">
                Sign In
            </a>
        </p>
    </div>
</div>

