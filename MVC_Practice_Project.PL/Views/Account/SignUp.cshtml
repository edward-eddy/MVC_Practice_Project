@model SignUpDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div>
    <div class="text-center mb-6">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-white" xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 24 24">
                <path fill="currentColor" d="M21 10.5h-1v-1a1 1 0 0 0-2 0v1h-1a1 1 0 0 0 0 2h1v1a1 1 0 0 0 2 0v-1h1a1 1 0 0 0 0-2Zm-7.7 1.72A4.92 4.92 0 0 0 15 8.5a5 5 0 0 0-10 0a4.92 4.92 0 0 0 1.7 3.72A8 8 0 0 0 2 19.5a1 1 0 0 0 2 0a6 6 0 0 1 12 0a1 1 0 0 0 2 0a8 8 0 0 0-4.7-7.28ZM10 11.5a3 3 0 1 1 3-3a3 3 0 0 1-3 3Z" />
            </svg>
        </div>
        <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Create Account</h2>
            <p class="text-gray-600 text-sm">Fill in your details to register</p>
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <form asp-action="SignUp">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label asp-for="FirstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
                    <input asp-for="FirstName" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="First Name" required>
                    <span asp-validation-for="FirstName" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
                    <input asp-for="LastName" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="Last Name" required>
                    <span asp-validation-for="LastName" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label asp-for="UserName" class="block text-sm font-semibold text-gray-700 mb-1">Username</label>
                    <input asp-for="UserName" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="Username" required>
                    <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
                <div>
                    <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
                    <input asp-for="Email" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="your@email.com" required>
                    <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
            </div>
                        
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                    <input asp-for="Password" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="••••••••" minlength="6" required>
                    <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" placeholder="••••••••" required>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500 mt-1 block font-medium"></span>
                </div>
            </div>
            <div class="flex items-center mt-4">
                <input asp-for="IsAgreed" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" required>
                <label asp-for="IsAgreed" class="ml-2 block text-sm text-gray-700">
                    I agree to the <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold">terms and conditions</a>
                </label>
                <span asp-validation-for="IsAgreed" class="text-sm text-red-500 mt-1 block font-medium"></span>
            </div>


            <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 mt-6">
                Sign Up
            </button>
        </form>

        @* <div class="relative flex items-center my-6">
            <div class="flex-grow border-t border-gray-300"></div>
            <span class="flex-shrink mx-4 text-gray-500 text-sm">or continue with</span>
            <div class="flex-grow border-t border-gray-300"></div>
        </div>

        <div class="space-y-3">
            <button class="w-full flex items-center justify-center py-3 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-300">
                <img src="https://img.icons8.com/color/20/000000/google-logo.png" alt="Google" class="mr-3">
                <span class="text-gray-700 font-medium">Google</span>
            </button>
            <button class="w-full flex items-center justify-center py-3 px-4 border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-300">
                <img src="https://img.icons8.com/color/20/000000/facebook-new.png" alt="Facebook" class="mr-3">
                <span class="text-gray-700 font-medium">Facebook</span>
            </button>
        </div> *@

        <p class="text-center text-gray-600 text-sm mt-6">
            Already have an account?
            <a asp-action="SignIn" data-container="signin-form-container" class="text-blue-600 hover:text-blue-800 font-semibold">
                Sign In
            </a>
        </p>
    </div>
</div>

