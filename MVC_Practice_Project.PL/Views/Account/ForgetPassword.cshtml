@model ForgetPasswordDto
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

    <div class="text-center mb-8">
        
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Forgot Your Password?</h2>
    <p class="text-gray-600 text-sm">Please enter your email address to search for your account.</p>
    </div>

    <form asp-action="SendResetPasswordURL">
        <div>
        <input asp-for="Email" placeholder="Email Address" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm" required>
            <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block font-medium"></span>
        </div>

        <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-4 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Send The Recovery Link
        </button>
    </form>

    <p class="text-center text-gray-600 text-sm mt-6">
        Already have an account?
        <a asp-action="SignIn" data-container="signin-form-container" class="text-blue-600 hover:text-blue-800 font-semibold">
            SignIn Instead!
        </a>
    </p>

