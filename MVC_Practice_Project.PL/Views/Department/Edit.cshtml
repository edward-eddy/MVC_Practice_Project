@model CreateDepartmentDto
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<form asp-action="Edit">
    <div class="form-group m-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" />
    </div>
    <div class="m-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>