@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Deparments</h1>

<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover table-striped table-light">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <td><a class="btn btn-success" asp-action="Details">Details</a></td>
                    <td><a class="btn btn-warning" asp-action="Edit">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-primary">
        <h4>
            There Is No Departments :(
        </h4>
    </div>
}